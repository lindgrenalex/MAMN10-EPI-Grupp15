<?xml version="1.0"?>

<group title="Aim main ikc">
    
    
    <module
        class = "Dynamixel"
        name = "Dynamixel"
        device  = "/dev/cu.usbserial-A4012AK3"
        index_mode = "indirect"
        printf_info ="full"
        use_feedback ="true"
        baud_rate = "1000000"
        angle_unit = "degrees"
    />
    

    <module
        class       = "ThrowModule"
        name        = "ThrowModule"
    />
    
    <module
        class 			= "Kinect"
        name 			= "Kinect"
        mode            = "mm"
        xtion           = "false"
    />
    
    <connection
        sourcemodule = "Kinect_own"
        source = "HEAD_POSITION"
        targetmodule = "ThrowModule"
        target = "INPUT"
        delay = "0"
    />
    
    <connection
    sourcemodule = "Kinect_own"
    source = "FOCUS_POSITION"
    targetmodule = "ThrowModule"
    target = "INPUT"
    delay = "0"
    />


    <connection
        sourcemodule = "ThrowModule"
        source = "OUTPUT_servo_position"
        targetmodule = "Dynamixel"
        target = "GOAL_POSITION"
        delay = "1"
    />
    
    <module
        class = "Constant"
        name = "MovingSpeed"
        outputsize = "1"
        data = "0.4"
    
    />
    
    <connection
        sourcemodule = "MovingSpeed"
        source = "OUTPUT"
        targetmodule = "Dynamixel"
        target = "MOVING_SPEED"
        
    />
    
    
    <view name="Dynamixel Control" object_size="50" >
        
        <object
        class="BarGraph"
        title="Actual Positions"
        module = "Servo1"
        source = "data"
        x="0" y="0"
        w="2" h="2"
        max="360"
        />
        
        <object
        class="BarGraph"
        title="Speed"
        module = "MovingSpeed"
        source = "OUTPUT"
        x="2" y="0"
        w="2" h="2"
        max="1"
        />
        
        <object
        class="BarGraph"
        title="Temperature (Â°C)"
        module = "Dynamixel"
        source = "FEEDBACK_PRESENT_TEMPERATURE"
        x="4" y="0"
        w="2" h="2"
        max="100"
        />
        
        <object
        class="Plot"
        title="Load"
        module = "Dynamixel"
        source = "FEEDBACK_PRESENT_LOAD"
        x="6" y="0"
        w="2" h="2"
        min="-1"
        max="1"
        />
        <object
        class="BarGraph"
        title="Voltage (V)"
        module = "Dynamixel1"
        source = "FEEDBACK_PRESENT_VOLTAGE"
        x="8" y="0"
        w="2" h="2"
        max="20"
        />
        
        <object
        class="Slider"
        title="Speed"
        module = "MovingSpeed"
        parameter = "data"
        xindex = "0"
        x="0" y="2" h="3"
        max="1"
        />
        
        <object
        class="Table"
        module = "Dynamixel"
        source = "FEEDBACK_PRESENT_POSITION"
        x="0" y="5"
        w="3" h="2"
        font_size = "30"
        />
        
        <object
        class="Switch"
        module="Switch"
        parameter="data"
        x="0"
        y="7"
        w="3"
        />


    </view>
</group>

